<table class="attr">
  <tr>
    <th width="150">Unique ID</th>
    <td><%= @user.id %></td>
  </tr>
  <% if admin_user == 1 %>
  <tr>
    <th width="150">Admin</th>
    <td><%= @user.admin? ? "o" : "x" %></td>
  </tr>
  <% end %>
  <tr>
    <th width="150">User_name</th>
    <td><%= @user.user_name %></td>
  </tr>
  <tr>
    <th width="150">Gender</th>
    <td><%= @user.gender == 0 ? "male" : "female" %></td>
  </tr>
  <tr>
    <th width="150">E-Mail</th>
    <td><%= @user.mail %></td>
  </tr>
  <tr>
    <th width="150">Birthday</th>
    <td><%= @user.birthday.try(:strftime, "%Y / %m / %d") %></td>
  </tr>
  <tr>
    <th width="150">Counts</th>
    <td><%= @user.counts %></td>
  </tr>
  <tr>
    <th width="150">Match rate</th>
    <td><%= @user.tekigou %></td>
  </tr>
</table>