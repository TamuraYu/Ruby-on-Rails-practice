<% logger.progname = "views/articles" %>
<% logger.info "show.htmlを読み込みました" %>

<% @page_title = @article.title %>

<h1><%= @article.title %></h1>

<p><%= link_to "編集", [:edit, @article] %></p>

<table class="attr">
  <tr>
    <th width="100">Title</th>
    <td><%= @article.title %></td>
  </tr>
  <tr>
    <th>Body</th>
    <td><%= simple_format(@article.body) %></td>
  </tr>
  <tr>
    <th>Release</th>
    <td><%= @article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th>Expire</th>
    <td><%= @article.expired_at.try(:strftime, "%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th>User-only</th>
    <td><%= @article.user_only? ? "o" : "x" %></td>
  </tr>
</table>